@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@using SchoolB.Models
@model bus

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="./assets/css/BusList.css">
    <!-- <link rel="stylesheet" href="./assets/css/main.css"> -->
    <link rel="stylesheet" href="	https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous"> -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="assets/fonts/fontawesome-free-6.5.1/fontawesome-free-6.5.1-web/css/all.min.css">
    <link rel="stylesheet" href="">
</head>
<body>
    <section class="intro">
        <div class="bg-image-vertical h-200" style="background-color: #EFD3E4; background-image: url(https://mdbootstrap.com/img/Photos/new-templates/search-box/img1.jpg);">
            <div class="mask d-flex align-items-center h-100">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-12 col-lg-10">
                            <div class="card" style="border-radius: 1rem;">
                                <div class="card-body p-5">
                                    <h1 class="mb-5 text-center">Bus Detail</h1>
                                    <form asp-controller="Bus" asp-action="BusDetail" method="post">
                                        
                                            <!-- 2 column grid layout with text inputs for the first and last names -->
                                            <div class="row">
                                                <div class="col-12 col-md-6 mb-4">
                                                    <div class="form-outline">
                                                        <input type="text" id="form6Example1" class="form-control" asp-for="BusId" readonly/>
                                                        <label class="form-label" for="form6Example1">BusID</label>
                                                    </div>
                                                </div>
                                                <div class="col-12 col-md-6 mb-4">
                                                    <div class="form-outline">
                                                        <input type="text" id="form6Example2" class="form-control" asp-for="RouteId"/>
                                                        <label class="form-label" for="form6Example2">RouteID</label>
                                                    </div>
                                                </div>
                                            </div>
                                        
                                        <!-- Text input -->
                                            <div class="form-outline mb-4">
                                                <input type="text" id="form6Example3" class="form-control" asp-for="DriverId"/>
                                                <label class="form-label" for="form6Example3">DriverID</label>
                                            </div>

                                            <!-- Text input -->
                                            <div class="form-outline mb-4">
                                            <input type="text" id="form6Example4" class="form-control" value="@ViewBag.DriverName" readonly />
                                                <label class="form-label" for="form6Example4" >Driver Name</label>
                                            </div>

                                            <!-- Email input -->
                                            <div class="form-outline mb-4">
                                            <input type="email" id="form6Example5" class="form-control"value="@ViewBag.DriverPhone" readonly />
                                                <label class="form-label" for="form6Example5">Phone Driver</label>
                                            </div>

                                            <!-- Message input -->
                                            <div class="form-outline mb-4">
                                                <textarea class="form-control" id="form6Example7" rows="4" readonly>@ViewBag.RouteName</textarea>
                                                <label class="form-label" for="form6Example7">Route Name</label>
                                            </div>
                                            <span style="color: red ">@ViewBag.erorr</span>




                                        <!-- Submit button -->
                                        <button type="submit" class="btn btn-primary ">Place order</button>
                                        <a href="javascript:history.back()" class="btn btn-primary ">Back</a>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</body>
</html>