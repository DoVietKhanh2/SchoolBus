@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@using SchoolB.Models
@model List<bus>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap">
    <link rel="stylesheet" href="assets/fonts/fontawesome-free-6.5.1/fontawesome-free-6.5.1-web/css/all.min.css" />


</head>
<body>
    <section class="vh-100 gradient-custom-2">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-md-12 col-xl-10">

                    <div class="card mask-custom">
                        <div class="card-body p-4 text-white">

                            <div class="text-center pt-3 pb-2">
                                <h2 class="my-4" style="color: black">Bus List</h2>
                            </div>

                            <table class="table text-white mb-0">
                                <thead>
                                    <tr>
                                        <th scope="col">BusID</th>
                                        <th scope="col">RouteID</th>
                                        <th scope="col">DriverID</th>
                                        <th scope="col">Start-End</th>
                                        <th scope="col">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <form asp-controller="Bus" asp-action="BusList" method="post">
                                        @foreach (var item in Model)
                                        {
                                        <tr class="fw-normal">
                                            <th>
                                                <span class="ms-2">@item.BusId</span>

                                            </th>
                                            <td class="align-middle">
                                                <option name="routeid" value="">@item.RouteId</option>
                                            </td>
                                            <td class="align-middle">
                                                <span name="driverid">@item.DriverId</span>
                                            </td>
                                            <td class="align-middle">
                                                <span>@item.Route.StartLocation-@item.Route.EndLocation</span>
                                                
                                            </td>
                                            <td class="align-middle">
                                                <button class="badge bg-success" style="border: none;">
                                                    <a style="color: white; text-decoration: none;" asp-controller="Bus" asp-action="BusDetail" asp-route-id="@item.BusId">Detail</a>

                                            </button>
                                                <button type="submit" class="badge bg-danger" style="border: none"><a style="color: white; text-decoration: none;" asp-controller="Bus" asp-action="Delete" asp-route-id="@item.BusId">Delete</a></button>
                                            </td>
                                        </tr>

                                        }
                                    </form>

                                </tbody>

                            </table>
                            
                            <a href="javascript:history.back()" class="btn btn-primary ">Back</a>


                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
</body>
</html>
