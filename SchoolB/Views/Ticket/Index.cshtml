@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@using SchoolB.Models
@model Ticket
@{
    int check = 0;
    string routename = "";

}
@if(ViewBag.Checked != null){
    check = ViewBag.Checked;
    
}
@if (ViewBag.Routename != null)
{
    routename = ViewBag.Routename;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>How To Create Book Appointment Form HTML In Bootstrap 5</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">

</head>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6 offset-md-3 border p-4 shadow bg-light">
                <div class="col-12">
                    <h3 class="fw-normal text-secondary fs-4 text-uppercase mb-4">Form Ticket</h3>
                </div>
                <form asp-controller="Ticket" asp-action="Bookticket" method="post">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <input type="text" class="form-control" placeholder="UserID" value="@ViewBag.UserId" asp-for="UserId" readonly>
                        </div>
                        <div class="col-md-6">
                            <input type="text" class="form-control" placeholder="Full Name" value="@ViewBag.FullName" readonly>
                        </div>
                        <div class="col-md-6">
                            <input type="tel" class="form-control" placeholder="Phone Number" value="@ViewBag.Phone" readonly>
                        </div>
                        <div class="col-md-6">
                            <input type="text" class="form-control" placeholder="Enter Address" value="@ViewBag.Address" asp-for="Address">
                        </div>
                        <div class="col-md-6">
                            <input type="number" class="form-control" placeholder="Enter Month" min="1" max="12" name="month" asp-for="NumberOfMonths">
                        <span asp-validation-for="NumberOfMonths"></span>
                        </div>

                            <div class="col-md-6">
                                <input type="text" class="form-control" placeholder="Enter BusID" name="busid" asp-for="BusId">
                            </div>                       
                        <div class="col-12">
                            <input type="hidden" value="@check" name="check"/>
                        <textarea class="form-control" placeholder="Route Name">@routename</textarea>
                         
                        </div>
                        <span style="color: red">@ViewBag.erorr</span>
                        <div class="col-12 mt-5">
                            <button type="submit" class="btn btn-primary float-end">Book Ticket</button>
                        <button type="button" class="btn btn-primary "><a href="javascript:history.back()" href="javascript:history.back()" style="color:white; text-decoration: none">Backaaa</a></button>                       
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</html>
