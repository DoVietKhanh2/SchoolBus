@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@using SchoolB.Models
@model List<User>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap">
    <link rel="stylesheet" href="assets/fonts/fontawesome-free-6.5.1/fontawesome-free-6.5.1-web/css/all.min.css"/>
    

</head>
<body>
    <section class="vh-100 gradient-custom-2">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-md-12 col-xl-10">

                    <div class="card mask-custom">
                        <div class="card-body p-4 text-white">

                            <div class="text-center pt-3 pb-2">
                                <h2 class="my-4" style="color: black">User List</h2>
                            </div>

                            <table class="table text-white mb-0">
                                <thead>
                                    <tr>
                                        <th scope="col">Full name</th>
                                        <th scope="col">UserID</th>
                                        <th scope="col">User Name</th>
                                        <th scope="col">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <form asp-controller="User" asp-action="ListUsers"  method="post">
                                        @foreach(User u in Model)
                                        {
                                        <tr class="fw-normal">                                           
                                            <th>
                                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava1-bg.webp"
                                                     alt="avatar" style="width: 45px; height: auto;">
                                                <span class="ms-2" >@u.FullName</span>
                                                
                                            </th>
                                            <td class="align-middle">
                                                <option name ="userid" value="@u.UserId">@u.UserId</option>                                               
                                            </td>
                                            <td class="align-middle">
                                                <h6 class="mb-0"><span>@u.Username</span></h6>
                                            </td>
                                            <td class="align-middle">

                                                <button class="badge bg-success" style="border: none; "><a style="color: White; text-decoration-line: none" asp-controller="User" asp-action="Edit" asp-route-id="@u.UserId">Edit</a></button>
                                                <button type="submit" class="badge bg-danger" style="border: none"><a style="color: White; text-decoration-line: none" asp-controller="User" asp-action="Delete" asp-route-idd="@u.UserId">Delete</a></button>
                                            </td>
                                        </tr>
                                        }
                                    </form>
                                </tbody>
                            </table>
                            <a href="javascript:history.back()" class="btn btn-primary ">Back</a>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
</body>
</html>
